{
  "extends": [
    "react-app",           // Create React App's ESLint config
    "react-app/jest",      // Jest support for React
    "prettier"             // Disable conflicting Prettier rules
  ],
  "rules": {
    "no-console": "warn",  // Warn about console.log (should use proper logging in production)
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }]
  }
}